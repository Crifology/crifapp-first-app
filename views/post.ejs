<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="bootstrap-5.1.3-dist/css/bootstrap.min.css">
</head>
    <body>
        <div class = "container">
            <h1>Stadium </h1>
            <hr />
            <h2>Blog Posts</h2>
            <div class = "row">
                <% if (posts.length === 0) { %>
                    <div class="alert alert-info">No blog posts YET</div>
                    <% } %>
                <% posts.forEach (post => { %>
                <div class="col-12 col-md-4">
                    <div class="card">
                      <img src="https://i.picsum.photos/id/467/300/150.jpg?hmac=PVY6P6MpcWCQZzhP8AAoB_q-qVmTVOMnMag0jl6IyKA" class="card-img-top" alt="<%= post.name %>">
                      <div class="card-body">
                        <h5 class="card-title"><%=post.name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted ">By <%= post.author %></h6>
                        <p class="card-text"><%=post.text %></p>
                      </div>
                </div>
            </div>
            <% }); %>
        </div>
        </div>
    </body>
</html>